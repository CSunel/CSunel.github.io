---
const researchThemes = [
  {
    id: "01",
    title: "Memory-safe utilitlər",
    context: "Rust ilə sistem səviyyəli CLI alətləri",
    statement: "Fayl sistemi, proses idarəetməsi və log toplama ssenarilərində təhlükəsiz alternativlər hazırlamaq planlaşdırılır.",
    focus: [
      "Zero-cost abstractions",
      "Static binary paylanması",
      "Observability hook-ları"
    ]
  },
  {
    id: "02",
    title: "Async servis nüvəsi",
    context: "Tokio əsaslı mikroxidmət",
    statement: "Structured concurrency, geri təzyiq mexanizmləri və metriklər üçün ortaq skelet üzərində işlənir.",
    focus: [
      "Cancellation strategiyası",
      "Tracing-first dizayn",
      "Metrics + logs korrelyasiyası"
    ]
  },
  {
    id: "03",
    title: "Observability agenti",
    context: "Lightweight telemetry",
    statement: "Linux serverlərində əlavə agent olmadan metrik toplamaq üçün prototip hazırlanır.",
    focus: [
      "eBPF əsaslı ölçümlər",
      "Config-as-code",
      "Minimal resurs istifadəsi"
    ]
  }
];

const learningTracks = [
  {
    title: "Rust Atomics",
    detail: "Arc, Mutex, RwLock, parking_lot və lock-free strukturlar." 
  },
  {
    title: "Async Error Handling",
    detail: "`thiserror`, `miette`, layered error report modelləri." 
  },
  {
    title: "Deployment Ekosistemi",
    detail: "Container-siz paylanma, systemd units, musl target-ləri." 
  }
];
---

<section id="layiheler" class="section projects">
  <div class="container">
    <div class="section-title">
      <span class="section-number">03</span>
      <h2>Tədqiqat Fokusu</h2>
    </div>
    
    <div class="projects-intro">
      <p>
        Hazır məhsul və ya kommersiya layihəsi yoxdur. Bütün vaxtım sistem proqramlaşdırması 
        üzrə təcrübə toplamaq və gələcək açıq mənbə töhfələri üçün baza yaratmaqla keçir.
      </p>
    </div>

    <div class="status-panel">
      <div>
        <span class="status-label">Cari status</span>
        <p>Experimentation / Research-only</p>
      </div>
      <div>
        <span class="status-label">Gözlənti</span>
        <p>Real layihələr üçün konsept sübutu hazırlamaq</p>
      </div>
    </div>
    
    <div class="projects-list">
      {researchThemes.map((theme, index) => (
        <article class="project-card" style={`animation-delay: ${index * 0.15}s`}>
          <div class="project-header">
            <span class="project-number">{theme.id}</span>
            <span class="project-status" data-status="upcoming">Araşdırma mərhələsi</span>
          </div>
          <div class="project-content">
            <span class="project-category">{theme.context}</span>
            <h3 class="project-title">{theme.title}</h3>
            <p class="project-description">{theme.statement}</p>
          </div>
          <div class="project-footer">
            <div class="project-tags">
              {theme.focus.map((item) => (
                <span class="project-tag">{item}</span>
              ))}
            </div>
          </div>
          <div class="project-overlay">
            <span class="overlay-text">Konsepsiya</span>
          </div>
        </article>
      ))}
    </div>

    <div class="learning-section">
      <h3 class="learning-title">Öyrənmə Planı</h3>
      <div class="learning-list">
        {learningTracks.map((track) => (
          <div class="learning-item">
            <span class="learning-topic">{track.title}</span>
            <p>{track.detail}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .projects {
    background: linear-gradient(180deg, var(--color-black) 0%, var(--color-black-light) 100%);
    position: relative;
  }

  .projects::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-gray-800), transparent);
  }

  .projects-intro {
    max-width: 760px;
    margin-bottom: var(--space-3xl);
  }

  .projects-intro p {
    color: var(--color-gray-400);
    font-size: 1rem;
    line-height: 1.7;
  }

  .status-panel {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: var(--space-xl);
    padding: var(--space-xl);
    border: 1px solid var(--color-gray-800);
    border-radius: var(--radius-lg);
    background: var(--color-gray-900);
    margin-bottom: var(--space-3xl);
  }

  .status-label {
    font-size: 0.75rem;
    color: var(--color-gray-600);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .status-panel p {
    font-size: 0.95rem;
    color: var(--color-gray-300);
    margin-top: var(--space-xs);
  }

  .projects-list {
    display: grid;
    gap: var(--space-xl);
    margin-bottom: var(--space-3xl);
  }

  @media (min-width: 768px) {
    .projects-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1200px) {
    .projects-list {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .project-card {
    position: relative;
    background: var(--color-gray-900);
    border: 1px solid var(--color-gray-800);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    transition: all var(--transition-base);
  }

  .project-card:hover {
    border-color: var(--color-gray-600);
    transform: translateY(-6px);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .project-number {
    font-family: var(--font-mono);
    font-size: 2rem;
    color: var(--color-gray-800);
  }

  .project-status {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    border: 1px dashed var(--color-gray-700);
    color: var(--color-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .project-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .project-category {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .project-title {
    font-size: 1.25rem;
    color: var(--color-white);
  }

  .project-description {
    font-size: 0.9rem;
    color: var(--color-gray-500);
    line-height: 1.6;
  }

  .project-footer {
    border-top: 1px solid var(--color-gray-800);
    padding-top: var(--space-md);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .project-tag {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-gray-600);
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-gray-850);
    border-radius: var(--radius-sm);
  }

  .project-overlay {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    padding: var(--space-xs) var(--space-sm);
    border: 1px solid var(--color-gray-800);
    border-radius: var(--radius-sm);
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--color-gray-500);
    text-transform: uppercase;
  }

  .learning-section {
    border-top: 1px solid var(--color-gray-800);
    padding-top: var(--space-3xl);
  }

  .learning-title {
    font-size: 0.95rem;
    color: var(--color-gray-400);
    margin-bottom: var(--space-xl);
    letter-spacing: 0.08em;
  }

  .learning-list {
    display: grid;
    gap: var(--space-lg);
  }

  .learning-item {
    padding: var(--space-lg);
    border: 1px solid var(--color-gray-800);
    border-radius: var(--radius-md);
    background: var(--color-gray-900);
  }

  .learning-topic {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--color-white);
  }

  .learning-item p {
    font-size: 0.85rem;
    color: var(--color-gray-500);
    margin-top: var(--space-sm);
  }
</style>
