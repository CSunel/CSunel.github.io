---
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: "Discord",
    username: "0xnell",
    icon: "discord",
    link: null
  },
  {
    name: "GitHub",
    username: "CSunel",
    icon: "github",
    link: "https://github.com/CSunel/C"
  },
  {
    name: "Email",
    username: "csunelll@proton.me",
    icon: "email",
    link: "mailto:csunelll@proton.me"
  }
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <span class="logo-text">TR</span>
          <span class="logo-dot"></span>
        </a>
        <p class="footer-tagline">
          Rust yönümlü sistem proqramçısı
        </p>
      </div>
      
      <div class="footer-nav">
        <div class="footer-links">
          <span class="footer-links-title">Səhifələr</span>
          <a href="#haqqimda">Haqqımda</a>
          <a href="#bacariqlar">Bacarıqlar</a>
          <a href="#layiheler">Layihələr</a>
          <a href="#blog">Blog</a>
          <a href="#elaqe">Əlaqə</a>
        </div>
        
        <div class="footer-social">
          <span class="footer-links-title">Əlaqə</span>
          {socialLinks.map((social) => (
            <div class="social-item">
              <span class="social-icon">
                {social.icon === "discord" && (
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
                  </svg>
                )}
                {social.icon === "github" && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
                  </svg>
                )}
                {social.icon === "email" && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="2" y="4" width="20" height="16" rx="2"/>
                    <path d="M22 6L12 13 2 6"/>
                  </svg>
                )}
              </span>
              {social.link ? (
                <a href={social.link} target="_blank" rel="noopener">{social.username}</a>
              ) : (
                <span class="social-username">{social.username}</span>
              )}
            </div>
          ))}
        </div>
      </div>
      
      <div class="footer-bottom">
        <p class="copyright">
          © {currentYear} Rzalı Tərlan. Bütün hüquqlar qorunur.
        </p>
        <p class="built-with">
          <span class="built-icon">•</span>
          Rust və Astro ilə qurulub
        </p>
      </div>
    </div>
    
    <div class="footer-decoration">
      <div class="decoration-line"></div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-black);
    padding: var(--space-4xl) 0 var(--space-2xl);
    position: relative;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-gray-800), transparent);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
    align-items: center;
    text-align: center;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-family: var(--font-mono);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-white);
  }

  .logo-text {
    letter-spacing: -0.02em;
  }

  .logo-dot {
    width: 8px;
    height: 8px;
    background-color: var(--color-gray-500);
    border-radius: 50%;
  }

  .footer-tagline {
    font-size: 0.875rem;
    color: var(--color-gray-600);
  }

  .footer-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-lg);
  }

  .footer-links a {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: color var(--transition-fast);
    padding: var(--space-sm);
  }

  .footer-links a:hover {
    color: var(--color-white);
  }

  .footer-nav {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-3xl);
  }

  @media (max-width: 640px) {
    .footer-nav {
      grid-template-columns: 1fr;
      text-align: center;
    }
  }

  .footer-links-title {
    display: block;
    font-size: 0.625rem;
    color: var(--color-gray-600);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: var(--space-md);
  }

  .footer-social {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .social-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  @media (max-width: 640px) {
    .social-item {
      justify-content: center;
    }
  }

  .social-icon {
    width: 16px;
    height: 16px;
    color: var(--color-gray-600);
  }

  .social-icon svg {
    width: 100%;
    height: 100%;
  }

  .social-item a,
  .social-username {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-gray-500);
    transition: color var(--transition-fast);
  }

  .social-item a:hover {
    color: var(--color-white);
  }

  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-gray-900);
    width: 100%;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .copyright {
    font-size: 0.75rem;
    color: var(--color-gray-600);
  }

  .built-with {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-gray-600);
  }

  .built-icon {
    font-size: 0.5rem;
    color: var(--color-gray-700);
  }

  .footer-decoration {
    margin-top: var(--space-2xl);
    display: flex;
    justify-content: center;
  }

  .decoration-line {
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--color-gray-800), transparent);
  }
</style>
